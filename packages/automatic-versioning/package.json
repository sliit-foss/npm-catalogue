{
  "name": "@sliit-foss/automatic-versioning",
  "version": "1.0.7",
  "description": "A script which will automatically increment your app package version in accordance with conventional commits",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.js --bundle --platform=node --target=node14 --outfile=dist/index.js --sourcemap --minify",
    "bump-version": "pnpm build && node dist/index.js",
    "release": "pnpm run bump-version && pnpm publish --access=public --tag=latest && git reset HEAD~1 || true ",
    "test": "jest --coverage --verbose --runInBand --forceExit"
  },
  "dependencies": {
    "@actions/exec": "1.1.1",
    "colors": "1.4.0"
  },
  "author": "SLIIT FOSS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sliit-foss/npm-catalogue.git"
  },
  "homepage": "https://github.com/sliit-foss/npm-catalogue/packages/automatic-versioning#readme",
  "keywords": [
    "automatic-versioning",
    "semantic-versioning",
    "bump-version"
  ],
  "bugs": {
    "url": "https://github.com/sliit-foss/npm-catalogue/issues"
  }
}
